#pagedown converter
window.mdc = new Markdown.getSanitizingConverter()
Markdown.Extra.init(window.mdc, {extensions: "all", highlighter:"highlight", "table_class"})

#markdown output
$ ->
  $(".se_text").each (i, b) ->
    b.innerHTML = mdc.makeHtml(b.innerHTML)

#pagedown editor
$ ->
  $("textarea#wmd-input").ready ->
    help =
      handler: () ->
        window.open("http://spec.commonmark.org")
        return false
      title: "<%= I18n.t("components.markdown_editor.help", default: "Markdown Editing Help") %>"
    editor = new Markdown.Editor(window.mdc, "", help)
    editor.run()

#highlight
$ ->
  $("pre code").each (i, e) ->
    hljs.highlightBlock(e)

#<!-- google universal analytics -->
((i, s, o, g, r, a, m) ->
  i["GoogleAnalyticsObject"] = r
  i[r] = i[r] or ->
    (i[r].q = i[r].q or []).push arguments
    return

  i[r].l = 1 * new Date()

  a = s.createElement(o)
  m = s.getElementsByTagName(o)[0]

  a.async = 1
  a.src = g
  m.parentNode.insertBefore a, m
) window, document, "script", "//www.google-analytics.com/analytics.js", "ga"

ga "create", "<%= Settings.google_analytics_key %>", "auto"

$ ->
  ga "send", "pageview", window.location.pathname
