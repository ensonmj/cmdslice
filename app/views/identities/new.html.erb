<p>
  <strong>Already have an account?</strong>
  <%= link_to "Log in", login_path %> from here.
</p>

<%= form_tag "/auth/identity/register", class: "account-form",
  "data-parsley-validate" => true do %>
  <%= render "shared/err", res: @identity %>

  <fieldset class="account-info">
    <label>
      Nickname
      <%= text_field_tag :nickname, @identity.try(:nickname), required: true %>
    </label>
    <label>
      Email
      <%= email_field_tag :email, @identity.try(:email), required: true,
        "data-parsley-trigger" => "change" %>
    </label>
    <label>
      Password
      <%= password_field_tag :password, nil, required: true,
        "data-parsley-length" => "[6,20]" %>
    </label>
    <label>
      Password confirmation
      <%= password_field_tag :password_confirmation, nil, required: true,
        "data-parsley-equalto" => "#password" %>
    </label>
  </fieldset>
  <fieldset class="account-action">
    <input id="register" class="btn btn-success" type="submit" value="Register">
  </fieldset>
<% end %>
