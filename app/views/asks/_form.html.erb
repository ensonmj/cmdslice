<%= form_for [@user, @ask], html: {"data-parsley-validate" => true}  do |f| %>
  <%= render "shared/err", res: @ask %>

  <div class="title">
    <%= f.text_field :title, class: "form-control", required: true, placeholder: "Title" %>
  </div>

  <div class="wmd-group">
    <div class="wmd-text">
      <%#<div id="wmd-button-bar-slice"></div>%>
      <%= f.text_area :body, class: "wmd-input form-control",
        id: "wmd-input-slice", required: true,
        placeholder: "Your question here" %>
      <div class="wmd-preview" id="wmd-preview-slice"></div>
    </div>
    <%= f.submit class: "btn btn-success"%>
  </div>
<% end %>
