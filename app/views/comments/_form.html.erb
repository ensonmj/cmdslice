<%= simple_form_for([@slice, @slice.comments.build]) do |f| %>
  <div class="wmd-group">
    <div class="wmd-text">
      <%= f.input :body, label:false, placeholder: "What's your opinion?",
        input_html: {class: "wmd-input", id: "wmd-input-comment"} %>
      <div class="wmd-preview" id="wmd-preview-comment"></div>
    </div>
    <%= f.button :submit, class: "btn btn-success"%>
  </div>
<% end %>
