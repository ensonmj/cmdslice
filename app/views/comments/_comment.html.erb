<div class="comment">
  <p>
    <strong>Commenter:</strong>
    <%= comment.user.nickname %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <!-- /slices/slice_id/comments/:id -->
    <%= link_to "Destroy Comment", [comment.cslice, comment], method: :delete,
      data: {confirm: 'Are you sure?'} %>
  </p>
</div>
